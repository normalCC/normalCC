<!DOCTYPE html>
<html>
  <head>
    <title>Normalcc</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

    <%= csrf_meta_tags %>
  </head>
  
  <body>
    <div class="container">
      <div class="navbar ">
        <% if logged_in? %>
          <div class="navbar-inner">
            <a href="/" class="animated rubberBand">Home</a>  |
            <%= link_to "New Questions", new_question_path %>  |
            <%= link_to "List Questions", questions_path %> |
            <%= link_to 'Profile', current_user %> |
            <%= link_to 'Log Out', logout_path, method: 'delete' %>
            <% if current_user.admin %>
              <%= link_to 'Database', data_path %> |
              <%= link_to "List Questions", questions_path %> |
              <%= link_to 'User index', home_path %> |
            <% end %>
          </div>
        <% else %>
          <%= link_to 'Sign up', new_user_path  %> |
          <%= link_to 'Log In', login_path %> 
        <% end %>


      </div>
      <% flash.each do |name, msg| %>
        <% if name=="notice" %>
          <%= content_tag :div, msg, class: "alert alert-info", role: "alert" %>
        <% elsif name=="alert" %>
          <%= content_tag :div, msg, class: "alert alert-warning", role: "alert" %>
        <% elsif name=="danger" %>
          <%= content_tag :div, msg, class: "alert alert-danger", role: "alert" %>
        <% else %>
          <%= content_tag :div, msg, class: "alert alert-info", role: "alert" %>
        <% end %>
      <% end %>

      <%= yield %>
      
    </div>
  </body>
</html>
