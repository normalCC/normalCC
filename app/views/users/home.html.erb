<h1>All users</h1>

<h3>Regular Users</h3>
<% @users.each do |user| %>
 <%# if current_user.admin? && !current_user?(user) %> 
  <%#= link_to "Delete", user, method: :delete,
        data: { confirm: "Are you sure?" } %>

  <%# if user != user.admin? %>       
  <% if !user.admin? %>

    <%= link_to "Make Admin", make_admin_path(user.id), method: :patch,  data: { confirm: "Are you sure?" }  %> <br>
    <%= link_to user.name, user %>, <br>
    EMAIL: <%= user.email %>, <br>
    YEAR: <%= user.birth_year %>, <br>
    FEMALE: <%= user.female %>, <br>
    MALE: <%= user.male %>, <br>
    ADMIN: <%= user.admin %>, <br>
    COUNTRY: <%= user.country_id %>, <br>
    CREATED AT: <%= user.created_at %>, <br> 
    DIGEST: <%= user.password_digest %>. <br>
    <hr>
  <% end %> <br>
<% end %>

<h3>Admin Users</h3>   
<% @users.each do |user| %>
  <% if user.admin? %>
    <%= link_to "Undo Admin", make_admin_path(user.id), method: :patch,  data: { confirm: "Are you sure?" }  %>
     <br>
