<%= simple_form_for @question, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :title, label: "Question:" %>

  <h3>Answers:</h3>
  <%= f.full_error :answers %>
  <%= f.simple_fields_for :answers do |ans| %>
    <%= render "answer_fields", f: ans %>
  <% end %>


  <div class="links">
    <%= link_to_add_association 'Add answers', f, :answers, class: "btn btn-primary" %>
  </div>

  <%= f.submit %>
<% end %>